<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mattk.madcow.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:onClick="previousWorkout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:id="@+id/lastWorkouts"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Last Workout"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_header"
                    android:textColor="@color/primary_dark" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:onClick="nextWorkout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:id="@+id/nextWorkouts"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Next Workout"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_header"
                    android:textColor="@color/primary_dark" />
                    android:layout_height="match_parent">
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
