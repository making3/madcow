<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mattk.madcow.SetupWeightActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:padding="@dimen/setup_layout_padding"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:text="Max Squat"
                android:textSize="@dimen/setup_label_text"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:maxLength="4"
                android:text="255"
                android:id="@+id/max_lift_weight"
                android:inputType="number"
                android:layout_height="@dimen/setup_edit_height" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/setup_layout_padding"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:text="Reps"
                android:textSize="@dimen/setup_label_text"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:maxLength="2"
                android:text="5"
                android:id="@+id/max_lift_reps"
                android:inputType="number"
                android:layout_height="@dimen/setup_edit_height" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/setup_layout_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="Estimated 1RM"
                    android:textSize="@dimen/setup_label_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estimated_one_rep"
                    android:textSize="@dimen/setup_output_text"
                    android:layout_gravity="right"
                    android:text="255" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/setup_layout_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="Estimated 5RM"
                    android:textSize="@dimen/setup_label_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estimated_five_rep"
                    android:textSize="@dimen/setup_output_text"
                    android:layout_gravity="right"
                    android:text="255" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/setup_layout_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="Starting Weight"
                    android:textSize="@dimen/setup_label_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estimated_starting_weight"
                    android:textSize="@dimen/setup_output_text"
                    android:layout_gravity="right"
                    android:text="255" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
